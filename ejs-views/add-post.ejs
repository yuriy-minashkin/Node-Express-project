<html lang="en">

<%- include('./partials/head.ejs')%>

  <body>
    <%- include('./partials/nav.ejs') %>
      <form id="post-form" method="post" action="/add-post">
        <div class="form-info">
          <label>Post Title
            <input type="text" name="title">
          </label>
          <label>Author
            <input type="text" name="author">
